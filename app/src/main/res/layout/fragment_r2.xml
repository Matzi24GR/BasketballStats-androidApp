<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".R1Fragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="3dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/teamAText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Team A"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teamAP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:visibility="visible"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/teamAP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 2"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:visibility="visible"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/teamAP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 3"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:visibility="visible"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/teamAP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 4"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:visibility="visible"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/teamAP5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 5"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:visibility="visible"
                    tools:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/teamBText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Team B"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teamBP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:visibility="visible"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/teamBP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 2"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:visibility="visible"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/teamBP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 3"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:visibility="visible"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/teamBP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 4"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:visibility="visible"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/teamBP5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 5"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:visibility="visible"
                    tools:visibility="visible"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="3dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Σουτ (hold για αποτυχημενο)"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/onePointButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                app:layout_constraintEnd_toStartOf="@+id/twoPointButton"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Button
                android:id="@+id/twoPointButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2"
                app:layout_constraintEnd_toStartOf="@+id/threePointButton"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/onePointButton"
                app:layout_constraintTop_toTopOf="@+id/onePointButton" />

            <Button
                android:id="@+id/threePointButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3"
                app:layout_constraintBottom_toBottomOf="@+id/onePointButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/twoPointButton"
                app:layout_constraintTop_toTopOf="@+id/onePointButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="3dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <Button
                android:id="@+id/reboundButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F51B5"
                android:text="Ριμπαουντ"
                app:layout_constraintBottom_toTopOf="@+id/assistButton"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="8dp" />

            <Button
                android:id="@+id/assistButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#3F51B5"
                android:text="Ασσιστ"
                app:layout_constraintBottom_toTopOf="@+id/cutButton"
                app:layout_constraintTop_toBottomOf="@+id/reboundButton"
                tools:layout_editor_absoluteX="8dp" />

            <Button
                android:id="@+id/cutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#3F51B5"
                android:text="Κοψιμο"
                app:layout_constraintBottom_toTopOf="@+id/stealButton"
                app:layout_constraintTop_toBottomOf="@+id/assistButton"
                tools:layout_editor_absoluteX="8dp" />

            <Button
                android:id="@+id/stealButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#3F51B5"
                android:text="Κλεψιμο"
                app:layout_constraintBottom_toTopOf="@+id/mistakeButton"
                app:layout_constraintTop_toBottomOf="@+id/cutButton"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/mistakeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="Λαθος"
                app:layout_constraintBottom_toTopOf="@+id/foulButton"
                app:layout_constraintTop_toBottomOf="@+id/stealButton"
                tools:layout_editor_absoluteX="25dp" />

            <Button
                android:id="@+id/foulButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#F44336"
                android:text="Φαουλ"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mistakeButton"
                tools:layout_editor_absoluteX="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>